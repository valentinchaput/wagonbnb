<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 item">
      <div class="imageContainer">
        <% if @flat.picture_file_name %>
          <%= image_tag @flat.picture.url(:thumb) %>
        <% else %>
          <%= image_tag 'logo.jpg' %>
        <% end %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-4 item">
      <h1><%= @flat.title %></h1>
      <div>
        <p><i class="fa fa-globe"></i>  <%= @flat.address %>, <%= @flat.city %></p>
        <p><%= @flat.description %></p>
        <p><i class="fa fa-dollar"></i>  <%= @flat.price %></p>
        <p><i class="fa fa-user"></i>  <%= @flat.user.name %></p>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-4 item">
      <h4>Request booking</h4>
      <%= simple_form_for [@flat, @booking] do |f| %>

        <%= f.input :checkin %>
        <%= f.input :checkout %>

        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
    </div>

</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
  $(document).ready(function() {
  var coord = <%= raw @flat_coordinates %>;
  alert('Flat coordinates are ' + coord.lat + ', ' + coord.lng);
  });
  <% end %>
<% end %>
