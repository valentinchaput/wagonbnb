<div class="item">
  <h1><%= @flat.title %></h1>

  <div>
    <% if flat.picture_file_name %>
      <%= image_tag flat.picture.url(:medium) %>
    <% else %>
      <%= image_tag 'wagonbnb_thumb.jpg' %>
    <% end %>
  </div>

  <div>
    <p><%= @flat.city %></p>
    <p><%= @flat.description %></p>
    <p><%= @flat.price %></p>
    <p><%= @flat.user_id %></p>
  </div>

  <div>
    <%= link_to "request booking", new_flat_booking_path(@flat), class: "btn btn-warning" %>
    <%= link_to "return to list", flats_path, class: "btn btn-primary" %>
  </div>

  <div class="container">
    <h2>Request booking</h2>
    <%= simple_form_for [@flat, @booking] do |f| %>

      <%= f.input :checkin %>
      <%= f.input :checkout %>

      <%= f.button :submit, class: "btn btn-success" %>
    <% end %>
  </div>

</div>
